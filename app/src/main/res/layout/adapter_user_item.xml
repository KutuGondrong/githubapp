<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_user_github"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_background_bottom_left_right">

    <View
        android:id="@+id/lineBg"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorF5F5F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineBg" />

    <TextView
        android:id="@+id/txtFullName"
        style="@style/Text16SPColor333333Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:gravity="start"
        tools:text="Wang Shi Eun"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgIcon"
        app:layout_constraintTop_toBottomOf="@+id/lineBg" />

    <TextView
        android:id="@+id/txtUserName"
        style="@style/Text10SPColor333333Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:ellipsize="end"
        android:gravity="start"
        tools:text="\@wangshieun"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txtFullName"
        app:layout_constraintTop_toBottomOf="@+id/lineBg" />

    <TextView
        android:id="@+id/txtDescription"
        style="@style/Text14SPColor333333Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="start"
        tools:text="Director of Netshare Company"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgIcon"
        app:layout_constraintTop_toBottomOf="@+id/txtFullName" />

    <TextView
        android:id="@+id/txtCity"
        style="@style/Text10SPColor707070Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:gravity="start"
        tools:text="Taipei, Taiwan"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgIcon"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

    <TextView
        android:id="@+id/txtEmail"
        style="@style/Text10SPColor707070Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:gravity="start"
        tools:text="wangshi@mihoyo.com"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txtCity"
        app:layout_constraintStart_toEndOf="@+id/txtCity"
        app:layout_constraintTop_toTopOf="@+id/txtCity" />

</androidx.constraintlayout.widget.ConstraintLayout>